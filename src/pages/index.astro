---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Hero from '../components/Hero';
import VideoDemo from '../components/VideoDemo.astro';
import Features from '../components/Features';
import Timeline from '../components/Timeline.astro';
import QuickStart from '../components/QuickStart.astro';
import Footer from '../components/Footer.astro';
import {appData} from '../lib/data';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/png" href="/logo.png" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{appData.title} - {appData.description}</title>
		<meta name="title" content={`${appData.title} - ${appData.description}`} />
		<meta name="description" content={appData.description} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={appData.siteUrl} />
		<meta property="og:title" content={`${appData.title} - ${appData.description}`} />
		<meta property="og:description" content={appData.description} />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={appData.siteUrl} />
		<meta property="twitter:title" content={`${appData.title} - ${appData.description}`} />
		<meta property="twitter:description" content={appData.description} />
		
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
	</head>
	
	<body class="antialiased bg-black">
		<Header />
		<main>
			<Hero client:load />
			<Features client:load />
			<QuickStart />
		</main>
		<Footer />
	</body>
</html>
